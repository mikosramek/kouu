{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "KOUU API",
    "description": "An API to get KOUU users, lessons, and words."
  },
  "schemes": [
    "https"
  ],
  "host": "localhost:3001",
  "basePath": "/api/v1",
  "paths": {
    "/accounts/login": {
      "post": {
        "summary": "Login and create a session",
        "description": "Returns user information and session key.",
        "parameters": [
          {
            "in": "body",
            "name": "Authentication",
            "required": true,
            "description": "The username and password to login with.",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A user's information",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "lesson": {
                  "type": "number"
                },
                "points": {
                  "type": "number"
                },
                "session_id": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Authentication not provided",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Bad login authentication",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/accounts/logout/{session_id}": {
      "delete": {
        "summary": "Logout and delete a session",
        "description": "Returns true if successful",
        "parameters": [
          {
            "in": "path",
            "name": "session_id",
            "type": "string",
            "required": true,
            "description": "The session id returned when logging in."
          }
        ],
        "responses": {
          "200": {
            "description": "Success of deleting session and loggin out",
            "schema": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}